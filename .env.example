# ================== APP CONFIG ==================
APP_NAME=Laravel                     # Application name
APP_ENV=local                        # Application environment: local, production, staging
APP_KEY=                             # Encryption key (run 'php artisan key:generate' to generate)
APP_DEBUG=true                       # Enable debug mode (set to false in production)
APP_URL=http://localhost            # Base application URL

APP_LOCALE=en                       # Default application language
APP_FALLBACK_LOCALE=en              # Fallback language if translation not found
APP_FAKER_LOCALE=en_US              # Locale for fake data generation

APP_MAINTENANCE_DRIVER=file         # Maintenance mode storage: file or cache
# APP_MAINTENANCE_STORE=database    # Optional: use 'database' store for maintenance mode

PHP_CLI_SERVER_WORKERS=4            # Number of workers for PHP CLI server (development only)

BCRYPT_ROUNDS=12                    # Number of bcrypt hashing rounds (for passwords)

# ================== LOGGING =====================
LOG_CHANNEL=stack                   # Logging channel: stack, single, daily, etc.
LOG_STACK=single                    # Channels included in the 'stack' driver
LOG_DEPRECATIONS_CHANNEL=null       # Channel for deprecation warnings
LOG_LEVEL=debug                     # Log level: debug, info, notice, warning, error

# ================== DATABASE ====================
DB_CONNECTION=sqlite                # Default database connection
# DB_HOST=127.0.0.1                 # Database host (for MySQL, PostgreSQL, etc.)
# DB_PORT=3306                      # Database port
# DB_DATABASE=laravel              # Database name
# DB_USERNAME=root                 # Database username
# DB_PASSWORD=                     # Database password

# ================== SESSION =====================
SESSION_DRIVER=database             # Session driver: file, cookie, database, redis
SESSION_LIFETIME=120                # Session lifetime in minutes
SESSION_ENCRYPT=false               # Whether to encrypt session data
SESSION_PATH=/                      # Valid session path
SESSION_DOMAIN=null                 # Valid session domain (e.g., .yourdomain.com)

# ================== BROADCAST / FILE / QUEUE ====
BROADCAST_CONNECTION=log           # Broadcasting driver: log, pusher, null
FILESYSTEM_DISK=local              # Filesystem disk: local, public, s3, etc.
QUEUE_CONNECTION=database          # Queue driver: sync, database, redis, etc.


# ================== CACHE ========================
CACHE_STORE=database               # Cache driver: file, database, redis, etc.
CACHE_PREFIX=                      # Prefix for cache keys (optional)
=======


# ================== MEMCACHED ====================
MEMCACHED_HOST=127.0.0.1           # Memcached server address

# ================== REDIS ========================
REDIS_CLIENT=phpredis              # Redis client: phpredis or predis
REDIS_HOST=127.0.0.1               # Redis server host
REDIS_PASSWORD=null                # Redis password (if any)
REDIS_PORT=6379                    # Redis server port

# ================== MAIL =========================
MAIL_MAILER=log                    # Mail driver: smtp, sendmail, log
MAIL_SCHEME=null                   # Mail scheme (http, https - if applicable)
MAIL_HOST=127.0.0.1                # Mail server host
MAIL_PORT=2525                     # Mail server port
MAIL_USERNAME=null                 # Mail server username
MAIL_PASSWORD=null                 # Mail server password
MAIL_FROM_ADDRESS="hello@example.com"  # Sender email address
MAIL_FROM_NAME="${APP_NAME}"       # Sender name (usually app name)

# ================== AWS S3 =======================
AWS_ACCESS_KEY_ID=                 # AWS access key
AWS_SECRET_ACCESS_KEY=            # AWS secret access key
AWS_DEFAULT_REGION=us-east-1      # AWS default region
AWS_BUCKET=                        # S3 bucket name
AWS_USE_PATH_STYLE_ENDPOINT=false # Use path-style endpoint for S3 (useful for local/minio)

# ================== VITE =========================
VITE_APP_NAME="${APP_NAME}"        # App name used in Vite frontend builds
